<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_recipe_title_margin_start"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/view_recipe_title_margin_end"
        android:layout_marginBottom="@dimen/margin_small"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:transitionName="@string/name_transition"
        />

    <RelativeLayout
        android:id="@+id/loading_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_activity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:visibility="visible"
        >

        <LinearLayout
            android:id="@+id/recipe_name_view_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/recipe_name_edit_layout"
            app:layout_constraintTop_toTopOf="@id/recipe_name_edit_layout"
            >

            <TextView
                android:id="@+id/cook_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_recipe_content_margin_start"
                android:textSize="@dimen/item_text_size"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/view_recipe_title_margin_end"
                android:text="@string/minutes"
                android:textSize="@dimen/item_text_size"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recipe_name_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_recipe_title_margin_start"
                android:layout_weight="4"
                android:hint="@string/recipe_name"
                app:boxCornerRadiusBottomEnd="@dimen/square_corner"
                app:boxCornerRadiusTopEnd="@dimen/square_corner"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/recipe_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/view_recipe_title_margin_end"
                android:layout_weight="1"
                android:hint="@string/minutes"
                app:boxCornerRadiusBottomStart="@dimen/square_corner"
                app:boxCornerRadiusTopStart="@dimen/square_corner"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cook_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tags_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_recipe_title_margin_start"
            android:layout_marginEnd="@dimen/view_recipe_title_margin_end"
            android:layout_marginBottom="8dp"
            android:onClick="tagsClick"
            android:text="@string/tags"
            android:textSize="@dimen/item_text_size"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recipe_name_edit_layout"
            />

        <include
            android:id="@+id/tags_layout"
            layout="@layout/edit_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_recipe_content_margin_start"
            android:layout_marginEnd="@dimen/view_recipe_content_margin_end"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tags_section_title"
            />

        <TextView
            android:id="@+id/ingredients_section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_recipe_title_margin_start"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/view_recipe_title_margin_end"
            android:onClick="ingredientsClick"
            android:text="@string/ingredients"
            android:textSize="@dimen/item_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tags_layout"
            />

        <!-- Ingredient Views -->
        <ListView
            android:id="@+id/ingredients_list_view"
            style="@style/SmallConstrainedListView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredients_section_title"
            />

        <ListView
            android:id="@+id/ingredients_list_view_large"
            style="@style/LargeConstrainedListView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredients_list_view"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_ingredient_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:contentDescription="@string/add_ingredient_button"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredients_section_title"
            app:srcCompat="@drawable/ic_add_white_24dp"
            />

        <!-- End Ingredient Views -->
        <TextView
            android:id="@+id/instructions_section_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_recipe_title_margin_start"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/view_recipe_title_margin_end"
            android:onClick="instructionsClick"
            android:text="@string/instructions"
            android:textSize="@dimen/item_text_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ingredients_list_view_large"
            />

        <!-- Instruction Views -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/instruction_input_layout"
            style="@style/TextInputStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_recipe_content_margin_start"
            android:layout_marginEnd="@dimen/view_recipe_content_margin_end"
            android:hint="@string/instruction"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instructions_section_view"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/instruction_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <ListView
            android:id="@+id/instructions_list_view"
            style="@style/SmallConstrainedListView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instruction_input_layout"
            />

        <ListView
            android:id="@+id/instructions_list_view_large"
            style="@style/LargeConstrainedListView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instructions_list_view"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_instruction_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:contentDescription="@string/add_instruction_button"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/action_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/instructions_section_view"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/cross_to_check"
            />

        <!-- End Instruction Views -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_fab"
            android:contentDescription="@string/edit_save_mode_toggle_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/edit_to_save"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
