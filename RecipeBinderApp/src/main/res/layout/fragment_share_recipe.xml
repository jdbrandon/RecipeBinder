<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/margin_large"
        android:text="@string/sharing"
        android:textSize="@dimen/item_text_size"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="@dimen/qr_size"
            android:layout_height="@dimen/qr_size"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_xxxlarge"
            android:contentDescription="@string/qr_code"
            />

        <ImageView
            android:layout_width="@dimen/qr_size"
            android:layout_height="@dimen/qr_size"
            android:alpha=".60"
            android:contentDescription="@string/app_logo"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="#000"
            />
    </FrameLayout>

    <Button
        android:id="@+id/copy_raw_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xxlarge"
        android:text="@string/copy_to_clipboard"
        />

    <Button
        android:id="@+id/copy_uri_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_xxlarge"
        android:text="@string/copy_import_text"
        />

</LinearLayout>
